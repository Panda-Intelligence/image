{
  "name": "@panda-ai/image",
  "version": "0.2.2",
  "description": "In browser image compression, powered by WASM (imagequant)",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test": "bun test tests --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Panda-Intelligence/image.git"
  },
  "license": "MIT",
  "author": {
    "name": "Isaac Liu",
    "email": "isaac@pandacat.ai",
    "url": "https://github.com/Panda-Intelligence"
  },
  "engines": {
    "node": ">=18.0"
  },
  "keywords": [
    "panda intelligence",
    "panda ai",
    "image",
    "compress"
  ],
  "bugs": {
    "url": "https://github.com/Panda-Intelligence/image/issues"
  },
  "homepage": "https://github.com/Panda-Intelligence/image#readme",
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/bun": "latest",
    "@types/node": "^12.20.11",
    "@types/pako": "^2.0.3",
    "@types/pngjs": "^6.0.5",
    "bun-types": "^1.2.2",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "husky": "^6.0.0",
    "prettier": "^2.8.8",
    "semantic-release": "^21.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@panda-ai/imagequant": "^0.2.0",
    "crc-32": "^1.2.2",
    "pako": "^2.1.0",
    "pngjs": "^7.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}